<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_display_name"
        android:inputType="textCapWords"
        android:key="username"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_display_name"
        android:summary="Used in training record"
        />

    <ListPreference
        android:title="Language preference"
        android:summary="Select exercise display language"
        android:key="lang"
        android:defaultValue="en"
        android:entries="@array/tts_pref_langnames"
        android:entryValues="@array/tts_pref_langcodes" />

</PreferenceScreen>